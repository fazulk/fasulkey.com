---
import BaseHead from '../components/BaseHead.astro'
import ThemeToggle from '../components/ThemeToggle.astro'

interface Props {
  description: string
  title: string
}

const { description, title } = Astro.props;
---

<html lang="en" class="dark:bg-neutral-800 dark:text-neutral-300">
	<head>
     	  <BaseHead title={title} description={description} />
	</head>
	<body class="bg-white text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300">
	<div class="absolute top-4 right-4">
	</div>
	<main class="pb-6">
		<div class="text-5xl px-7 py-6 bg-[orange] text-neutral-800 flex justify-between">
		Jeff Fasulkey
		<div>
			<ThemeToggle />
		</div>
		</div>
		<slot />
	</main>
</body>
</html>
